{
	"default_locale": "en",
	"version": "1.0.0",
   "name": "__MSG_name__",
   "description": "__MSG_description__",
	"manifest_version": 3,
	"icons": {
		"128": "icons/icon-128.png"
	},
   "options_page": "options.html",
   "options_ui": {
      "page": "options.html",
      "title": "__MSG_options_window_title__"
    },
   "permissions": [
      "storage",
      "tabs"
   ],
   "background": {
      "service_worker": "background.js"
   },
	"content_scripts": [
      {
         "matches": ["*://joyreactor.cc/*", "*://*.reactor.cc/*"],
         "js": ["content/content.js"]
      },
      {
         "matches":["*://joyreactor.cc/*"],
         "css": ["content/joy.style.css"]
      },
      {
         "matches":["*://old.reactor.cc/*"],
         "css": ["content/old.style.css"]
      }
   ],
   "web_accessible_resources": [
      {
         "resources": ["content/img/*.*"],
         "matches": ["*://joyreactor.cc/*","*://*.reactor.cc/*"]
      }
   ]
}